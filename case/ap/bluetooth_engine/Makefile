#**************************************************************************
#																		  *
#	PROJECT		: MIPS port	for	UCOS-II									  *
#																		  *
#	MODULE		: MakeFile												  *
#																		  *
#	AUTHOR		: wuyueqian										          *
#																		  *
#	PROCESSOR	: MIPS 4KEc	(32	bit	RISC) -	Actions	board				  *
#																		  *
#	Tool-chain	:  Cygnus											      *
#																		  *
#	DESCRIPTION	:														  *
#	Makefile used for building application.								  *
#																		  *
#	The	default	target (all) builds	application	in two formats :		  *
#	*.elf :	Image in ELF format.										  *
#	*.rec :	Image in S-record format.									  *
#																		  *
#	The	linker also	generates a	MAP	file "*.map".						  *
#																		  *
#	Other targets are :													  *
#	clean :	   Deletes all files generated by makefile.					  *
#	depend :   Builds dependency file.									  *
#																		  *
#*************************************************************************/
# **********************************************
# Type of Processor	& Board
# **********************************************
Processor =	mips
# **********************************************
# Directories
# **********************************************
#把公共路径加载进来
include	./../../cfg/common_path
#把公共定义makefile加载进来
include	./../../cfg/rules.mk
# **********************************************
#Name of application 开发人员需修改处(modify-1)
IMAGENAME = btengine
#所要编译的源文件的存放位置,开发人员需修改处(modify-2)
SRCDIR = .
SRCDIR_16 = $(SRCDIR)/bt_engine_init $(SRCDIR)/bt_engine_controller 
SRCDIR_16_O1 = $(SRCDIR) 
SRCDIR_16_O2 = $(SRCDIR)/bt_engine_a2dp $(SRCDIR)/bt_engine_hfp $(SRCDIR)/bt_engine_spp $(SRCDIR)/bt_engine_hid $(SRCDIR)/bt_engine_tws $(SRCDIR)/bt_engine_unit_test $(SRCDIR)/bt_engine_dbg  $(SRCDIR)/bt_engine_dev_manage  $(SRCDIR)/bt_engine_ancs $(SRCDIR)/bt_engine_le_spp $(SRCDIR)/bt_engine_passthrough_profile $(SRCDIR)/bt_engine_passthrough
SRCDIR_GATT_16_O2 = $(SRCDIR)/bt_engine_ble
SRCDIR_32 = 
#目标文件送往的文件夹路径,开发人员可能需修改处(modify-3)
OBJECT_BIN_PATH = $(CASE)/fwpkg/ap

#蓝牙模组相关配置
BT_CONTROLLER_PATH = $(SRCDIR)/bt_controller_lib
BT_CONTROLLER_LIB = controller.a
BTPSPROOT = $(PSP_REL)/include/bt_inc
# **********************************************


#工具名称
DRV_BUILDER = $(PSP_REL)/tools/drv_builder.exe
AP_BUILDER = $(PSP_REL)/tools/ap_builder.exe  
#存放结果文件的目录，这里的设置为当前目录，即生成的结果文件放在当前目录
LINKDIR	  =	.
#指定依赖过程的文件的搜索路径，把源文件的路径写上即可
VPATH	=	$(SRCDIR_16) $(SRCDIR_32) $(OBJ_DIR) $(SRCDIR_16_O1) $(SRCDIR_16_O2) $(SRCDIR_GATT_16_O2)

# **********************************************
# Image	file names and map file
# **********************************************
#指定结果文件的名称
IMAGE_ELF =	$(IMAGENAME).exe
IMAGE_LST =	$(IMAGENAME).lst
IMAGE_INFO = $(IMAGENAME).info
IMAGE_LIB  = $(IMAGENAME).a
MAP		  =	$(IMAGENAME).map
TARGET_DRV = $(IMAGENAME).ap
TARGET_EXT   = exe lst map ap info a
TARGET_FILES = $(foreach n,$(TARGET_EXT),$(IMAGENAME).$(n))

# **********************************************
# Compiler and linker options
# **********************************************

#指定程序中引用的头文件的搜索路径，一般源码include时只写上头文件的名称，没有路径信息。这时就根据这个选项去搜索该头文件
INCLUDE	  =	 -I$(PSP_REL)/include/ucos -I$(PSP_REL)/include -I$(CASE)/inc -I$(CASE)/inc/common -I$(SRCDIR) -I$(BTPSPROOT) -I$(BTPSPROOT)/bt_host_include -I$(BTPSPROOT)/bt_con_include -I$(SRCDIR)/bt_engine_dbg -I$(SRCDIR)/bt_engine_dev_manage -I$(SRCDIR)/bt_engine_spp  -I$(SRCDIR)/bt_engine_ble -I$(SRCDIR)/bt_engine_ancs -I$(SRCDIR)/bt_engine_le_spp -I$(SRCDIR)/bt_engine_passthrough_profile -I$(SRCDIR)/bt_engine_passthrough -I$(SRCDIR)/bt_engine_controller


#指定链接时搜索的路径
LINCLUDE = -L$(OBJ_DIR) -L$(PSPLIBDIR) -L$(PSP_REL)/include -L$(SRCDIR)/bt_src_lib -L$(BT_CONTROLLER_PATH)

#指定打包归档文件的路径
ARINCLUDE = $(OBJ_DIR)/*.o

#指定自定义链接脚本的名称,开发人员需修改处(modify-4)
LD_SCRIPT = bluetooth_engine.xn

#链接命令行选项
LD_OPTS = $(LINCLUDE) -G 0 -T $(LD_SCRIPT) -gc-section -o $(IMAGE_ELF) -Map $(MAP) $(OFORMAT) 
LD_OPTS_1   = $(LINCLUDE) -G0 -gc-section -T $(LD_SCRIPT) $(OFORMAT)
LD_OPTS_2   = -o $(IMAGE_ELF) -Map $(MAP)


# **********************************************
# Files	to be compiled
# **********************************************

#获得.c后缀源码
SRC_C_16  = $(foreach dir,	$(SRCDIR_16), $(wildcard $(dir)/*.c))
#转换为.o格式文件名称，不带路径信息
OBJ_C_16  = $(notdir $(patsubst %.c, %.o, $(SRC_C_16)))

SRC_C_16_O1  = $(foreach dir,	$(SRCDIR_16_O1), $(wildcard $(dir)/*.c))
#转换为.o格式文件名称，不带路径信息
OBJ_C_16_O1  = $(notdir $(patsubst %.c, %.o, $(SRC_C_16_O1)))

SRC_C_16_O2  = $(foreach dir,	$(SRCDIR_16_O2), $(wildcard $(dir)/*.c))
#转换为.o格式文件名称，不带路径信息
OBJ_C_16_O2  = $(notdir $(patsubst %.c, %.o, $(SRC_C_16_O2)))

SRC_GATT_C_16_O2  = $(foreach dir,	$(SRCDIR_GATT_16_O2), $(wildcard $(dir)/*.c))
#转换为.o格式文件名称，不带路径信息
OBJ_GATT_C_16_O2  = $(notdir $(patsubst %.c, %.o, $(SRC_GATT_C_16_O2)))
#获得.c后缀源码
SRC_C_32  = $(foreach dir,	$(SRCDIR_32), $(wildcard $(dir)/*.c))
#转换为.o格式文件名称，不带路径信息
OBJ_C_32  = $(notdir $(patsubst %.c, %.o, $(SRC_C_32)))

#获得.S后缀源码
SRC_S_16  = $(foreach dir,	$(SRCDIR), $(wildcard $(dir)/*.S))
#转换为.o格式文件名称，不带路径信息
OBJ_S_16  = $(notdir $(patsubst %.S, %.o, $(SRC_S_16)))

#获得.c后缀源码
SRC_S_32  = $(foreach dir,	$(SRCDIR_32), $(wildcard $(dir)/*.S))
#转换为.o格式文件名称，不带路径信息
OBJ_S_32  = $(notdir $(patsubst %.S, %.o, $(SRC_S_32)))

#获得所有的.o文件名称
OBJ = $(OBJ_C_16_O1) $(OBJ_C_16) $(OBJ_S_16) $(OBJ_C_32) $(OBJ_S_32) $(OBJ_C_16_O2) $(OBJ_GATT_C_16_O2)


# **********************************************
# Rules
# **********************************************
#make目标
.PHONY : all

#dump出lst文件
all : creat_dir $(IMAGE_ELF)
#	$(OBJDUMP) -D $(IMAGE_ELF) > $(IMAGE_LST)
	$(READELF) -a $(IMAGE_ELF) > $(IMAGE_INFO)
	$(AP_BUILDER) $(IMAGE_ELF) $(TARGET_DRV)
#	$(OBJCOPY) -O binary $(IMAGE_ELF) -j .rom BT_ROM.BIN
#	cp BT_ROM.BIN $(OBJECT_BIN_PATH)
	cp $(TARGET_DRV) $(OBJECT_BIN_PATH)
	@echo
	@echo OK, SUCCESSFUL!!!
	@echo

creat_dir:
	mkdir -p $(OBJ_DIR)
#链接过程
$(IMAGE_ELF) : $(OBJ) $(PSPLIBDIR)/ctor.o
	$(AR) rcs  $(IMAGE_LIB) $(ARINCLUDE)
	$(LD) $(LD_OPTS_1) $(IMAGE_LIB) $(LD_OPTS_2)
#编译过程	
$(OBJ_C_16) : %.o : %.c
	$(CC) $(CC_OPTS_Os) -ffunction-sections -o $(OBJ_DIR)/$@ $<
	@echo

	
#独立O1编译
$(OBJ_C_16_O1) : %.o : %.c
	$(CC) $(CC_OPTS_O2_16) -ffunction-sections -o $(OBJ_DIR)/$@ $<
	@echo
	
#独立O2编译
$(OBJ_C_16_O2) : %.o : %.c
	$(CC) $(CC_OPTS_O2_16) -ffunction-sections -o $(OBJ_DIR)/$@ $<
	@echo
$(OBJ_GATT_C_16_O2) : %.o : %.c
	$(CC) $(CC_OPTS_O2_16) -ffunction-sections -o $(OBJ_DIR)/$@ $<
	@echo
	
$(OBJ_S_16) : %.o : %.S
	$(CC) $(CC_OPTS_O0_A_16) -o $(OBJ_DIR)/$@ $<
	@echo

$(OBJ_C_32) : %.o : %.c
	$(CC) $(CC_OPTS_O2) -ffunction-sections -o $(OBJ_DIR)/$@ $<
	@echo
	
$(OBJ_S_32) : %.o : %.S
	$(CC) $(CC_OPTS_O2_A) -o $(OBJ_DIR)/$@ $<
	@echo
	


	
#删除结果文件
.PHONY : clean

clean :
	rm -f $(LINKDIR)/$(OBJ)
	rm -f $(LINKDIR)/$(TARGET_FILES)
	rm -rf $(OBJ_DIR)

